{
  "name": "preact-baby-names",
  "short_name": "baby-names",
  "version": "1.1.0",
  "description": "Small Preact App Displaying Random Boy or Girl Names",
  "license": "MIT",
  "author": "Christopher Reid <Reid.Christopher.404@Gmail.Com>",
  "scripts": {
    "prebuild": "yarn clean:build",
    "pretest": "yarn lint && yarn clean:test",
    "start": "cross-env NODE_ENV=development webpack-dev-server --config ./internals/webpack/webpack.config.dev.js",
    "build": "cross-env NODE_ENV=production webpack --config ./internals/webpack/webpack.config.prod.js --color -p --progress --hide-modules --display=verbose",
    "test": "cross-env NODE_ENV=testing jest --coverage -w 1",
    "test-ci": "yarn run test && yarn run coveralls",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "bundle-report": "webpack-bundle-analyzer --port 8050 dist/stats.json",
    "lint": "yarn run lint:ts && yarn run prettier",
    "lint:ts": "tslint -c tslint.json 'src/*.{ts,tsx}' --fix",
    "prettier": "prettier --write 'src/*.{ts,tsx}'",
    "clean:build": "rimraf dist/",
    "clean:modules": "rimraf node_modules/",
    "clean:test": "rimraf coverage/"
  },
  "dependencies": {
    "preact": "8.4.2",
    "preact-router": "2.6.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "11.13.4",
    "@babel/core": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "@babel/preset-react": "7.0.0",
    "@babel/plugin-proposal-class-properties": "7.4.0",
    "autoprefixer": "9.5.1",
    "babel-loader": "8.0.5",
    "babel-plugin-react-transform": "3.0.0",
    "compression-webpack-plugin": "2.0.0",
    "copy-webpack-plugin": "5.0.2",
    "coveralls": "^3.0.3",
    "css-loader": "1.0.1",
    "cross-env": "5.2.0",
    "extract-loader": "3.1.0",
    "file-loader": "3.0.1",
    "image-webpack-loader": "4.6.0",
    "jest": "^24.7.1",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "offline-plugin": "5.0.6",
    "preact-compat": "3.18.4",
    "preact-render-spy": "1.3.0",
    "prettier": "^1.16.4",
    "rimraf": "2.6.3",
    "style-loader": "0.23.1",
    "svg-url-loader": "2.3.2",
    "terser-webpack-plugin": "1.2.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "5.3.3",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.4.3",
    "url-loader": "1.1.2",
    "webpack": "4.29.5",
    "webpack-bundle-analyzer": "3.3.2",
    "webpack-cli": "3.2.3",
    "webpack-dev-server": "3.2.0",
    "webpack-manifest-plugin": "2.0.4"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "modules": false,
          "targets": {
            "browsers": [
              ">1%",
              "not ie 11",
              "not op_mini all"
            ]
          }
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      [
        "@babel/transform-react-jsx",
        {
          "pragma": "preact.h"
        }
      ]
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "files": [
    "/dist"
  ],
  "jest": {
    "preset": "ts-jest/presets/default",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "statements": 65,
        "branches": 42,
        "functions": 42,
        "lines": 69
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      ".*\\.(css|less|styl|scss|sass)$": "<rootDir>/internals/mocks/cssModule.js",
      ".*\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/internals/mocks/image.js",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat"
    },
    "verbose": true
  },
  "prettier": {
    "trailingComma": "es5",
    "useTabs": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "semi": false,
    "tabWidth": 4,
    "arrowParens": "always"
  }
}
